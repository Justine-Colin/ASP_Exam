@model IEnumerable<ASP_Exam.Models.Auteurs>

@{
    ViewBag.Title = "Auteurs";
}

<h2>Auteurs</h2>

<p>
    @Html.ActionLink("Ajouter un auteur", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nom
        </th>
        <th>
            Prénom
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.A_Nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.A_Prenom)
        </td>
        <td>
            @Html.ActionLink("Modifier", "Edit", new { id=item.ID_Auteur }) |
            @Html.ActionLink("Afficher les détails", "Details", new { id=item.ID_Auteur }) |
            @Html.ActionLink("Supprimer", "Delete", new { id=item.ID_Auteur })
        </td>
    </tr>
}

</table>
