@model ASP_Exam.Models.Auteurs

@{
    ViewBag.Title = "Détails";
}

<h2>Détails</h2>

<div>
    <h4>Auteurs</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nom
        </dt>

        <dd>
            @Html.DisplayFor(model => model.A_Nom)
        </dd>

        <dt>
            Prénom
        </dt>

        <dd>
            @Html.DisplayFor(model => model.A_Prenom)
        </dd>

        <dt>
            Livres
        </dt>

        <dd>
            @foreach (var Livre in Model.A_Livres)
            {
                @Html.DisplayFor(livre => Livre.L_Titre)
                <br />
            }
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Modifier", "Edit", new { id = Model.ID_Auteur }) |
    @Html.ActionLink("Retour à la liste", "Index")
</p>
