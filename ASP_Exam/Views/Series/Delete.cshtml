@model ASP_Exam.Models.Series

@{
    ViewBag.Title = "Delete";
}

<h2>Supprimer</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Series</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Titre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.S_Nom)
        </dd>

        <dt>
            Nombre de tomes
        </dt>

        <dd>
            @Html.DisplayFor(model => model.S_Taille)
        </dd>

        <dt>
            Tous possédés
        </dt>

        <dd>
            @Html.DisplayFor(model => model.S_Fini)
        </dd>

        <dt>
            Parution terminée
        </dt>

        <dd>
            @Html.DisplayFor(model => model.S_Complet)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Supprimer" class="btn btn-default" /> |
            @Html.ActionLink("Retour à la liste", "Index")
        </div>
    }
</div>
