@model ASP_Exam.Models.Series

@{
    ViewBag.Title = "Create";
}

<h2>Ajouter</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Series</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <p class="control-label col-md-2">Titre</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.S_Nom, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.S_Nom, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Nombre de tomes</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.S_Taille, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.S_Taille, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Tous possédés</p>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.S_Fini)
                    @Html.ValidationMessageFor(model => model.S_Fini, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Parution terminée</p>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.S_Complet)
                    @Html.ValidationMessageFor(model => model.S_Complet, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ajouter" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Retour à la liste", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
